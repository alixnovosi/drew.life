{
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-blacklist": [],
        "at-rule-no-unknown": null,
        "color-hex-length": "long",
        "color-hex-case": "lowercase",
        "indentation": 4,
        "selector-list-comma-newline-after": "always-multi-line",

        "scss/at-rule-no-unknown": true
    }
}
